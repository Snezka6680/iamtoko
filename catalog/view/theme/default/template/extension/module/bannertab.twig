<div class="container bannertab hidden-sm hidden-xs">
   <ul class="nav nav-tabs">
    <li class="active"><a href="#tab-new" data-toggle="tab">{{ text_new_bannertab }}</a></li>
    <li><a href="#tab-sale" data-toggle="tab">{{ text_sale_bannertab }}</a></li>
    <li><a href="#tab-best" data-toggle="tab">{{ text_best_bannertab }}</a></li>
