  </ul> 
  <div class="tab-content">
    <!--Новинки-->
    <div class="tab-pane active" id="tab-new">
      {% for banner in banners %}                            
        <div>
          <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" width="100%" height="100%" />
          {% if banner.link %}<a href="{{ banner.link }}" alt="{{ banner.title }}">{{ banner.description }}</a>{% endif %} 
        </div>   
      {% endfor %}
    </div>
